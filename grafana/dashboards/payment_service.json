  "panels": [
    {
      "type": "timeseries",
      "title": "Payment Latency (p50/p95/p99)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM_DS"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.50, sum by (le) (rate(payment_latency_seconds_bucket{service=\"payment\"}[5m]))) * 1000",
          "legendFormat": "p50"
        },
        {
          "refId": "B",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(payment_latency_seconds_bucket{service=\"payment\"}[5m]))) * 1000",
          "legendFormat": "p95"
        },
        {
          "refId": "C",
          "expr": "histogram_quantile(0.99, sum by (le) (rate(payment_latency_seconds_bucket{service=\"payment\"}[5m]))) * 1000",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Payment Error Rate (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM_DS"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(rate(payment_requests_total{service=\"payment\",status=\"error\"}[5m])) / sum(rate(payment_requests_total{service=\"payment\"}[5m]))",
          "legendFormat": "error%"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Current Error Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "PROM_DS"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(rate(payment_requests_total{service=\"payment\",status=\"error\"}[1m])) / sum(rate(payment_requests_total{service=\"payment\"}[1m]))",
          "legendFormat": "error%"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": [
